include variables.pug 
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./manage.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css", integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==", crossorigin="anonymous", referrerpolicy="no-referrer")
        title متجر الوفاق | إدارة منتج
    body 
        .addForm
            img(src="./logo.png", alt="elwefaq logo", class="logo")
            span.header إضافة منتج جديد
            form(action="./Add/success", method="post", enctype="multipart/form-data")
                label أدخل اسم المنتج
                br
                input(type="text", name="productName", class="inpt", placeholder="أدخل اسم المنتج كاملاً")
                br
                br
                label أدخل كود المنتج 
                br
                input(type="number", name="product_Id", class="inpt", placeholder="أدخل كود المنتج المكون من 6 أرقام", min="0", maxlength="6")      
                br
                br
                label أدخل الكمية المتوافرة
                br
                input(type="number", name="product_Quantity", class="inpt", placeholder="أدخل الكمية المتوافرة من المنتج", min="0")
                br
                br
                label صورة المنتج 
                br
                input(type="file", name="product_Image", class="inpt")
                br
                br
                label إسم المسئول الذى قام بإضافة المنتج
                br
                input(type="text", name="product_Adding_Admin", class="inpt", value= AdminName, readonly)
                br
                br
                label تاريخ إضافة المنتج
                br
                input(type="text", name="product_Adding_Time", class="inpt", value= date, readonly)
                br
                br
                input(type="submit", value="إضافة", class="sbmt")
                input(type="reset", value="حذف", class="reset")
        .empty 